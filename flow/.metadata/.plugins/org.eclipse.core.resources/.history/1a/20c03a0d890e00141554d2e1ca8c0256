import java.io.*;
import java.util.*;

import javax.script.*;

import org.openqa.selenium.*;
import org.openqa.selenium.firefox.FirefoxDriver;

public class ProjectGhost{
    public static void main(String[] args) throws Exception {
    	
    	try
    	{
    	// The Firefox driver supports javascript  
        WebDriver driver = new FirefoxDriver();
    		
        driver.get("https://login.cengage.com/");
        
        System.out.print("LOGIN PAGE LOADING: ");
        System.out.println(((JavascriptExecutor)driver).executeScript("var performance = window.performance || {};" + 
                "var startTiming0 = performance.timing.navigationStart;"+
                "var endTiming0 = performance.timing.loadEventEnd;"+
                "console.log('TotalTime: ' + (endTiming0 - startTiming0) + 'ms');"+
                "var startTiming1 = performance.timing.navigationStart;"+
                "var endTiming1 = performance.timing.redirectStart;"+
                "console.log('StartToRedirectTime: ' + (endTiming1 - startTiming1) + 'ms');"+
        		"var startTiming2 = performance.timing.redirectStart;"+
        		"var endTiming2 = performance.timing.redirectEnd;"+
        		"console.log('redirectTiming: ' + (endTiming2 - startTiming2) + 'ms');"+
        		"var startTiming3 = performance.timing.fetchStart;"+
        		"var endTiming3 = performance.timing.domainLookupStart;"+
        		"console.log('fetchStart: ' + (endTiming3 - startTiming3) + 'ms');"+
        		"var startTiming4 = performance.timing.domainLookupStart;"+
        		"var endTiming4 = performance.timing.domainLookupEnd;"+
        		"console.log('DNS LookupTime: ' + (endTiming4 - startTiming4) + 'ms');"+
        		"var startTiming5 = performance.timing.connectStart;"+
        		"var endTiming5 = performance.timing.connectEnd;"+
        		"console.log('connectTime: ' + (endTiming5 - startTiming5) + 'ms');"+
                "var startTiming6 = performance.timing.requestStart;"+
                "var endTiming6 = performance.timing.responseStart;"+
                "console.log('requestTime: ' + (endTiming6 - startTiming6) + 'ms');"+
                "var startTiming7 = performance.timing.responseStart;"+
                "var endTiming7 = performance.timing.responseEnd;"+
                "console.log('responseTime: ' + (endTiming7 - startTiming7) + 'ms');"+
                "var startTiming8 = performance.timing.domLoading;"+
                "var endTiming8 = performance.timing.domComplete;"+
                "console.log('domLoading ' + (endTiming8 - startTiming8) + 'ms');"+
                "var startTiming9 = performance.timing.loadEventStart;"+
                "var endTiming9 = performance.timing.loadEventEnd;"+
                "console.log('Load Event: ' + (endTiming9 - startTiming9) + 'ms');"+
                "var startTiming10 = performance.timing.domContentLoadedEventStart;"+
                "var endTiming10 = performance.timing.domContentLoadedEventEnd;"+
                "console.log('domContentLoaded: ' + (endTiming10 - startTiming10) + 'ms');"+
                "var startTiming11 = performance.timing.unloadEventStart;"+
                "var endTiming11 = performance.timing.unloadEventEnd;"+
                "console.log('Unload Event: ' + (endTiming11 - startTiming11) + 'ms');"));
        
        Thread.sleep(5000);
        
        //Query and fill Username
        WebElement usernameQuery = driver.findElement(By.xpath(".//*[@id='emailId']"));
        usernameQuery.sendKeys("mockgeyser.slave@gmail.com");
        
        //Query and fill Password
        WebElement passwordQuery = driver.findElement(By.xpath(".//*[@id='password']"));
        passwordQuery.sendKeys("DASHBOARD1234");
    	}
    	catch(Exception e)
    	{
    		e.printStackTrace();
    	}
    }
}

